<application xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://apstandard.com/ns/1" version="1.2" packaged="@PACKAGED@">
	<id>http://apsstandard.org/app/AfterLogic-Aurora</id>
	<name>AfterLogic Aurora</name>
	<version>@VERSION@</version>
	<release>@RELEASE@</release>
	<homepage>http://www.afterlogic.com/aurora</homepage>
	<vendor>
		<name>AfterLogic Corp.</name>
		<homepage>http://www.afterlogic.com/</homepage>
		<icon path="images/al_logo.png" />
	</vendor>
	<packager>
		<name>AfterLogic</name>
		<homepage>http://www.afterlogic.com/</homepage>
	</packager>
	<presentation>
		<summary>AfterLogic Aurora Collaboration Server</summary>
		
		<description>
			Fast and clean e-mail groupware solution with calendar sharing, global address book, corporate files, helpdesk, and mobile sync support.
			Can work in multi-tenant mode to enable providers to offer Aurora on SaaS basis, with customizable subscription plans.
			Supports multiple interface languages including right-left Hebrew and Arabic.
		</description>
		<description xml:lang="ru">
			Быстрое и комфортное решение для совместной работы.
			Поддерживается общий доступ к календарям, глобальная адресная книга, совместная работа с файлами, хелпдеск (модуль поддержки), мобильная синхронизация, многоязычность.
			Может использоваться провайдерами в multi-tenant сценариях для предоставления услуг расширенной бизнес почты в рамках модели SaaS, с настраиваемыми планами подписок.
		</description>
		
		<icon path="images/wm_logo_64x64.png" />
		
		<screenshot path="images/common-screen.png">
			<description>Messages List screen with preview pane</description>
			<description xml:lang="ru">Список писем с панелью предварительного просмотра</description>
		</screenshot>

		<changelog>
			<version release="@RELEASE@" version="@VERSION@">
				<entry>Bug fixes and misc. improvements</entry>
				<entry xml:lang="ru">Исправления и различные улучшения</entry>
			</version>
			<version release="1" version="7.1.0.7">
				<entry>Improved exception handling.</entry>
				<entry xml:lang="ru">Улучшена обработка исключений.</entry>
			</version>
		</changelog>
		
		<categories>
			<category>Collaboration/Email</category>
		</categories>
		
		<languages>
			<language>en</language>
			<language>ru</language>
		</languages>
	</presentation>
	<global-settings>
		<setting id="site" class="title" type="string" default-value="" min-length="1">
			<name>Collaboration Server URL</name>
			<name xml:lang="ru">Collaboration Server URL</name>
			<description>e.g. http://acs.provider.com/</description>
			<description xml:lang="ru">напр. http://acs.provider.com/</description>
		</setting>
		<group class="authn">
			<setting id="partner_login" type="string" class="login">
				<name>Partner Administrator Login</name>
				<name xml:lang="ru">Логин партнера/администратора</name>
				<error-message>
					Please make sure the text you entered starts with a letter
					and continues with either numbers, letters, underscores or hyphens.
				</error-message>
				<error-message xml:lang="ru">
					Вводимый текст должен начинаться с латинской буквы,
                    далее допускаются цифры, латинские буквы, дефис и подчеркивание.
				</error-message>
			</setting>
			<setting id="partner_password" type="password" class="password">
				<name>Partner Administrator Password</name>
				<name xml:lang="ru">Пароль партнера/администратора</name>
			</setting>
		</group>
	</global-settings>
	<patch match="/application/version >= '7.1.0'" />
	<service id="tenant" class="service">
		<license must-accept="true">
			<text>
				<name>AfterLogic Software License Agreement</name>
				<url>http://www.afterlogic.com/products/common-licensing</url>
			</text>
		</license>
		<presentation>
			<name>Tenant</name>
			<name xml:lang="ru">Абонент</name>
			<summary>Tenant is a subscription unit which includes all the domains of the customer</summary>
			<summary xml:lang="ru">В понятие "абонент" включаются все домены клиента.</summary>
			<infolinks>
				<link class="official" href="http://www.afterlogic.com/aurora">Official site</link>
				<link class="official" href="http://www.afterlogic.com/aurora" xml:lang="ru">Официальный сайт</link>
				<link class="support" href="http://www.afterlogic.com/wiki/Aurora_documentation">Support</link>
				<link class="support" href="http://www.afterlogic.com/wiki/Aurora_documentation" xml:lang="ru">Поддержка</link>
				<link class="deployment-guide" href="http://www.afterlogic.com/wiki/Aurora_documentation">Documentation</link>
			</infolinks>
			<entry-points>
				<entry class="control-panel" dst="{cs_url}/adminpanel/index.php?login=1&amp;AdmloginInput={adm_login_part1}_{adm_login_part2}" method="POST">
					<label>Login to webmail admin panel</label>
					<label xml:lang="ru">Вход в административную панель вебмейла</label>
					<variable name="cs_url" value-of-setting="site" />
					<variable name="adm_login_part1" value-of-setting="tenant_name" />
					<variable name="adm_login_part2" value-of-setting="partner_login" />
					<variable name="AdmpasswordInput" value-of-setting="tenant_password" />
				</entry>
			</entry-points>
		</presentation>
		<settings>
			<group class="authn">
				<setting id="tenant_name" class="login" type="string" visibility="hidden" installation-only="true" uniq="global" min-length="1">
					<name>Administrator login</name>
					<name xml:lang="ru">Логин администратора</name>
				</setting>
				<setting id="tenant_password" class="password" type="password" visibility="hidden" installation-only="true" min-length="1">
					<name>Administrator password</name>
					<name xml:lang="ru">Пароль администратора</name>
				</setting>
			</group>
			<setting id="account_limit" type="string" class="item" default-value="5" visibility="hidden">
				<name>Account limit for customer</name>
				<name xml:lang="ru">Максимальное число учётных записей для абонента</name>
			</setting>
			<setting id="tenant_quota_default_mb" type="string" class="mb" default-value="2500" visibility="hidden">
				<name>Default disk space for service (MB)</name>
				<name xml:lang="ru">Дисковая квота для абонента (MB)</name>
			</setting>
		</settings>
		<resources>
			<resource id="account_usage" class="item" limiting-setting="account_limit">
				<name>Accounts used by customer</name>
				<name xml:lang="ru">Число учётных записей, использованных абонентом</name>
			</resource>
			<resource id="tenant_diskusage" class="mb" limiting-setting="tenant_quota_default_mb">
				<name>Disk space used by customer (MB)</name>
				<name xml:lang="ru">Дисковое пространство, использованное абонентом (MB)</name>
			</resource>
		</resources>
		<requirements xmlns:php="http://apstandard.com/ns/1/php">
			<php:version min="5.3" />
			<php:extension>soap</php:extension>
		</requirements>
		<provision>
			<configuration-script name="configure-tenant.php">
				<script-language>php</script-language>
				<status-control />
				<structured-output />
			</configuration-script>
			<verify-script name="verify-tenant.php">
				<script-language>php</script-language>
				<structured-output />
			</verify-script>
			<resource-script name="tenant-resources.php">
				<script-language>php</script-language>
			</resource-script>
		</provision>
	</service>
</application>
