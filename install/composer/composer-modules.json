{
	"config": {
        "vendor-dir": "composer-plugins"
    },
	"repositories": [
    ],	
	"require": {
		"oomphinc/composer-installers-extender": "^1.1",
		"wikimedia/composer-merge-plugin": "dev-master"
	},
	"extra": {
		"installer-types": ["aurora-module"],
        "installer-paths": {
			"special/package/": ["my/package"],
			"../../modules/{$name}/": ["type:aurora-module"]
		},
        "merge-plugin": {
            "include": [
                "modules.json"
            ]
		}
	}
}